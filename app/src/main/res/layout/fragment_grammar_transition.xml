<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2f2c79"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".GrammarTransitionFragment">

    <TextView
        android:id="@+id/tvGrammar"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:shadowColor="#F0F0F0"
        android:shadowDx="4"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="Grammar Simulator"
        android:textColor="#9f90ea"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDefinicao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:fontFamily="casual"
        android:text="G = (V, T, P, S)"
        android:textAlignment="center"
        android:textColor="#F0F0F0"
        android:textSize="24dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayoutDinamico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="casual"
            android:text="Input"
            android:textAlignment="center"
            android:textColor="#F0F0F0"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etEntrada2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F0F0F0"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789*+|().Îµ"
            android:ems="10"
            android:fontFamily="casual"
            android:gravity="center"
            android:inputType="text"
            android:text="aaa"
            android:textAlignment="center"
            android:textColor="#F0F0F0"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/btTestar2"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#9f90ea"
        android:fontFamily="casual"
        android:text="Test"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>