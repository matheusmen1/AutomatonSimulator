<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".GrammarFragment">

    <TextView
        android:id="@+id/tvGrammar"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:shadowColor="#F0F0F0"
        android:shadowDx="4"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="Grammar Simulator"
        android:textColor="#9f90ea"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="casual"
            android:text="Variaveis (V)"
            android:textAlignment="center"
            android:textColor="#F0F0F0"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etVariaveis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F0F0F0"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789*+|().ε"
            android:ems="10"
            android:fontFamily="casual"
            android:gravity="center"
            android:inputType="text"
            android:text="A,B,C"
            android:textAlignment="center"
            android:textColor="#F0F0F0"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="casual"
            android:text="Terminal (T)"
            android:textAlignment="center"
            android:textColor="#F0F0F0"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etTerminais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F0F0F0"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789*+|().ε"
            android:ems="10"
            android:fontFamily="casual"
            android:gravity="center"
            android:inputType="text"
            android:text="a,b"
            android:textAlignment="center"
            android:textColor="#F0F0F0"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="casual"
            android:text="Inicial (S)"
            android:textAlignment="center"
            android:textColor="#F0F0F0"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etInicial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F0F0F0"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789*+|().ε"
            android:ems="10"
            android:fontFamily="casual"
            android:gravity="center"
            android:inputType="text"
            android:text="A"
            android:textAlignment="center"
            android:textColor="#F0F0F0"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/btConfirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#9f90ea"
        android:fontFamily="casual"
        android:text="Enter"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>